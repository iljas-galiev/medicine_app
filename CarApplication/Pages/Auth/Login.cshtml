@page
@model CarApplication.Pages.Auth.Login

@{
    Layout = Layout;
    ViewData["Title"] = "Авторизация";
}
<h3 class="text-center">Авторизация</h3>
<div class="form">
    <form action="" method="post">
        @{
            if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger">
                    @Model.Message
                </div>
            }
        }
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="email" class="form-label">E-mail</label>
            <input value="@Model.Email" type="text" name="email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="password" class="form-label">Пароль</label>
            <input value="@Model.Password" type="password" id="password" name="password" class="form-control">
        </div>
        <div class="form-check">
            <input type="checkbox" name="remember" class="form-check-input" id="authRememberMe2">
            <label class="form-check-label" for="authRememberMe2">Запомнить меня</label>
        </div>
        <div class="form-group">
            <input type="submit" class="btn custom-btn" value="Войти">
            <a href="/auth/register" class="btn btn-default">Регистрация</a>
        </div>
    </form>
</div>
