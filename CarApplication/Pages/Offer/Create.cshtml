@page
@model CarApplication.Pages.Offer.Create

@{
    Layout = Layout;
    ViewData["Title"] = "Создать объявление";
}
<p class="create-adt-header text-uppercase">Создать объявление</p>
<form class="create-adt-form" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @{
        if (Model.Offer.Errors.Count > 0)
        {
            <div class="alert alert-danger">
                <ul>
                    @{
                        foreach (var error in Model.Offer.Errors)
                        {
                            <li>@error.Key: @error.Value</li>
                        }
                    }
                </ul>
            </div>
        }
    }

    <input value="@Model.Title" type="text" class="create-adt-input-name create-adt-form-item form-control input-options" name="title" placeholder="Название объявления">

    <input value="@Model.Brand" type="text" class="create-adt-mark create-adt-form-item form-control input-options" name="brand" placeholder="Марка автомобиля">

    <input value="@Model.Model" type="text" class="create-adt-model create-adt-form-item form-control input-options" name="model" placeholder="Модель автомобиля">

    <input value="@Model.Price" type="text" class="create-adt-mark create-adt-form-item form-control input-options" name="price" placeholder="Цена">

    <input multiple id="adtCreatePhotoInput" type="file" class="create-adt-input-photos" name="uploads">
    <label for="adtCreatePhotoInput" class="create-adt-label-photos input-options">Добавить фотографии</label>

    <label class="adt-create-label" for="adtCreateDescription">Описание</label>
    <textarea id="adtCreateDescription" class="create-adt-description create-adt-form-item form-control input-options" name="description">
        @Model.Description
    </textarea>

    <input value="@Model.Phone" type="text" class="create-adt-phone create-adt-form-item form-control input-options" name="phone" placeholder="Телефон">

    <input value="@Model.Email" type="text" class="create-adt-email create-adt-form-item form-control input-options " name="email" placeholder="E-mail">

    <button class="create-adt-btn custom-btn">Подать объявление</button>
</form>
